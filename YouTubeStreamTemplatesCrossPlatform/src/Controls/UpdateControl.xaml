<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.UpdateControl">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
          RowDefinitions="*,1.3*" ColumnDefinitions="*"
          x:Name="ContentGrid">
        <DockPanel VerticalAlignment="Stretch" LastChildFill="False">
            <TextBlock Text="AutoUpdate" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="1,0,0,0" />
            <CheckBox DockPanel.Dock="Right" Margin="0,0,1,0" Checked="CheckBox_OnChecked" x:Name="CheckBox" />
        </DockPanel>

        <Button Grid.Row="1" Content="Update" Click="UpdateButton_OnClick" />
    </Grid>
</UserControl>