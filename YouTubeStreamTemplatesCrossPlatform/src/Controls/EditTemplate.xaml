<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:liveStreaming="clr-namespace:YouTubeStreamTemplates.LiveStreaming;assembly=YouTubeStreamTemplates"
             xmlns:controls="clr-namespace:YouTubeStreamTemplatesCrossPlatform.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.EditTemplate">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
          RowDefinitions="*,*,*,10*,*,10*,*,*,*" ColumnDefinitions="*,2*,15*,*"
          x:Name="ContentGrid">
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Title:" />
        <controls:GenericComboBox x:TypeArguments="Template" Grid.Row="1" Grid.Column="2" x:Name="TemplateComboBox"
                                  SelectedIndex="0"
                                  SelectionChanged="LiveStreamComboBox_OnSelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="liveStreaming:LiveStream">
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </controls:GenericComboBox>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Description:" />
        <TextBox Grid.Row="3" Grid.Column="2" x:Name="DescriptionTextBox" AcceptsReturn="True"
                 LostFocus="LiveStreamDescription_OnFocusLost" />

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Tags:" />
        <!-- <controls:TagEditor Grid.Row="3" Grid.Column="2"  x:Name="TagEditor"/> -->

        <TextBlock Grid.Row="7" Grid.Column="1" Text="Category:" />
        <controls:GenericComboBox x:TypeArguments="liveStreaming:Category" Grid.Row="7" Grid.Column="2"
                                  x:Name="CategoryComboBox" SelectedIndex="0"
                                  SelectionChanged="CategoryComboBox_OnSelectionChanged" />
    </Grid>
</UserControl>