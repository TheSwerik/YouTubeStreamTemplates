<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.TagCard">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1">
        <Grid x:Name="TagsPanel" Background="{DynamicResource ThemeBackgroundBrush}" ColumnDefinitions="Auto,Auto">
            <TextBlock Grid.Column="0" x:Name="TextBlock" />
            <Button Grid.Column="1" Content="X" x:Name="CloseButton" />
        </Grid>
    </Border>
</UserControl>