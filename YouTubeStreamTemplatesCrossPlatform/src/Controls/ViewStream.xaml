<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.ViewStream">
    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            BorderThickness="0"
            BorderBrush="{DynamicResource ThemeBorderMidBrush}"
            Padding="50,0,0,0">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              RowDefinitions="*,*,*,10*,*,10*,*,*,*" ColumnDefinitions="*,2*,15*,*"
              x:Name="ContentGrid">
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Title:" />
            <Border Grid.Row="1" Grid.Column="2"
                    BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1">
                <TextBlock x:Name="TitleTextBlock" VerticalAlignment="Center" Padding="3" />
            </Border>

            <TextBlock Grid.Row="3" Grid.Column="1" Text="Description:" />
            <Border Grid.Row="3" Grid.Column="2"
                    BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1">
                <TextBlock x:Name="DescriptionTextBlock" VerticalAlignment="Center" Padding="3" />
            </Border>

            <TextBlock Grid.Row="5" Grid.Column="1" Text="Tags:" />
            <!-- TagEditor here Grid.Row="7" Grid.Column="2" -->

            <TextBlock Grid.Row="7" Grid.Column="1" Text="Category:" />
            <Border Grid.Row="7" Grid.Column="2"
                    BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1">
                <TextBlock x:Name="CategoryTextBlock" VerticalAlignment="Center" Padding="3" />
            </Border>
        </Grid>
    </Border>
</UserControl>