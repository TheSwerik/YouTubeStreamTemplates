<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.TagEditor">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1">
        <WrapPanel x:Name="TagsPanel" Background="{DynamicResource ThemeBackgroundBrush}">
            <TextBox x:Name="InputTextBox" KeyUp="InputTextBox_OnKeyUp" MinWidth="100" />
            <!-- TODO TextBox -> BorderThickness="0" -->
        </WrapPanel>
    </Border>
</UserControl>